<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.yangsl.ctrip.widget.HomeButtonView
            android:id="@id/home_index_scarebuying"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_homepage_scarebuying" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#ffdfdfdf" />

        <com.yangsl.ctrip.widget.HomeButtonView
            android:id="@id/home_index_hotevent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_homepage_hotevent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_homepage_btn_shape_scarebuying" />

</FrameLayout>